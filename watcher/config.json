{
  "name": "Home Assistant Watcher",
  "version": "0.1.2",
  "stage": "experimental",
  "slug": "home-assistant-watcher-addon",
  "description": "Add-on that watches the state of an event bus",
  "url": "https://github.com/karlenek/home-assistant-watcher-addon",
  "startup": "once",
  "boot": "auto",
  "ports": {
    "8040/tcp": 8040
  },
  "ports_description": {
      "8040/tcp": "Server port"
  },
  "environment": {
    "CONFIG_PATH": "../data/options.json",
    "SERVER_PORT": "8040"
  },
  "options": {
    "server": {
      "enabled": true,
      "token": "1234"
    },
    "client": {
      "enabled": true,
      "host": "localhost:8040",
      "token": "1234",
      "retryTime": 10,
      "tls": false
    },
    "mqtt": {
      "host": "192.168.1.2",
      "port": 1883,
      "username": "mqtt",
      "password": "<secret>",
      "discoveryPrefix": "hass",
      "hassStatusTopic": "hass/status"
    }
  },
  "schema": {
    "server": {
      "enabled": "bool",
      "token": "str"
    },
    "client": {
      "enabled": "bool",
      "host": "str",
      "token": "str",
      "retryTime": "int",
      "tls": "bool"
    },
    "mqtt": {
      "host": "str",
      "port": "int",
      "username": "str",
      "password": "str",
      "discoveryPrefix": "str",
      "hassStatusTopic": "str"
    }
  },
  "arch": ["amd64", "armv7", "armhf", "i386" , "aarch64"]
}