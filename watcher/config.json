{
  "name": "Home Assistant Watcher",
  "version": "0.1.2",
  "stage": "experimental",
  "slug": "home-assistant-watcher-addon",
  "description": "Add-on that watches the state of an event bus",
  "url": "https://github.com/karlenek/home-assistant-watcher-addon",
  "startup": "once",
  "boot": "auto",
  "ports": {
    "8040/tcp": 8040
  },
  "ports_description": {
      "8040/tcp": "Server port"
  },
  "environment": {
    "CONFIG_PATH": "../data/options.json",
    "SERVER_PORT": "8040"
  },
  "options": {
    "server": {
      "token": "1234"
    },
    "client": {
      "host": "localhost:8040",
      "token": "1234"
    },
    "mqtt": {
      "host": "192.168.1.2",
      "port": 1883,
      "username": "mqtt",
      "password": "secret"
    }
  },
  "schema": {
    "server": {
      "token": "str"
    },
    "client": {
      "host": "str",
      "token": "str"
    },
    "mqtt": {
      "host": "str",
      "port": "int",
      "username": "str",
      "password": "str"
    }
  },
  "arch": ["amd64", "armv7", "armhf", "i386" , "aarch64"]
}